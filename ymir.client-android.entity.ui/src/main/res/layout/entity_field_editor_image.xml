<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        style="?imageFieldEditorValueStyle"
        android:id="@+id/entity_field_editor_image_value"
        android:visibility="gone"
        android:padding="@dimen/entity_field_editor_image_padding_value"
        android:layout_width="@dimen/entity_field_editor_image_size"
        android:layout_height="@dimen/entity_field_editor_image_size"
        android:layout_marginTop="@dimen/entity_field_editor_image_vertical_margin"
        android:layout_marginBottom="@dimen/entity_field_editor_image_vertical_margin"
        android:layout_marginLeft="@dimen/entity_field_editor_image_horizontal_margin"
        android:layout_marginRight="@dimen/entity_field_editor_image_horizontal_margin"
        android:layout_gravity="center" />

    <ImageView
        style="?imageFieldEditorNullStyle"
        android:id="@+id/entity_field_editor_image_null"
        android:src="@drawable/ic_field_editor_image_null"
        android:visibility="gone"
        android:padding="@dimen/entity_field_editor_image_padding_null"
        android:layout_width="@dimen/entity_field_editor_image_size"
        android:layout_height="@dimen/entity_field_editor_image_size"
        android:layout_marginBottom="@dimen/entity_field_editor_image_vertical_margin"
        android:layout_marginLeft="@dimen/entity_field_editor_image_horizontal_margin"
        android:layout_marginRight="@dimen/entity_field_editor_image_horizontal_margin"
        android:layout_gravity="center" />
</LinearLayout>
