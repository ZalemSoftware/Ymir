<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/entity_editing_message_list_header_item_top_margin"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
        android:id="@+id/entity_editing_message_list_header_item_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/entity_editing_message_list_header_item_detail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="@dimen/entity_editing_message_list_header_item_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:singleLine="true"
        android:textIsSelectable="true" />
</LinearLayout>