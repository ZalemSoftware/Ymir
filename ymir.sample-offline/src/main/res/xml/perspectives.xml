<perspectives xmlns:pegaso="http://schemas.android.com/apk/res-auto">
    <!-- Perspectivas iniciais (lista/detalhe).
         As perspectivas padrão são:
            Lista e Lista/Detalhes: br.com.zalem.ymir.client.android.entity.ui.perspective.EntityListDetailPerspective
            Apenas Detalhes: br.com.zalem.ymir.client.android.entity.ui.perspective.EntityDetailPerspective
    -->

    <perspective pegaso:title="@string/expense_list_perspective_title"
        pegaso:className="br.com.zalem.ymir.sample.offline.perspective.ExpenseListDetailPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Expense"
        pegaso:launchMode="single" >
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST_DETAIL" />
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST" />
            <category pegaso:name="Expense" />
        </intent-filter>
        <argument pegaso:key="ENABLE_FAB_ADD" />
    </perspective>
    <perspective pegaso:title="@string/expense_list_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntityDetailPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Expense" >
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.DETAIL" />
            <category pegaso:name="Expense" />
        </intent-filter>
    </perspective>

    <perspective pegaso:title="@string/product_list_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntityListDetailPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Product"
        pegaso:launchMode="single" >
        <intent-filter>
        	<action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST_DETAIL" />
        	<action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST" />
        	<category pegaso:name="Product" />
        </intent-filter>
        <argument pegaso:key="DISABLE_EDIT_ON_CLICK" />
        <argument pegaso:key="ENABLE_FAB_ADD" />
    </perspective>

    <perspective pegaso:title="@string/place_list_perspective_title"
        pegaso:className="br.com.zalem.ymir.sample.offline.perspective.PlaceListDetailPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Place"
        pegaso:launchMode="single" >
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST_DETAIL" />
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.LIST" />
            <category pegaso:name="Place" />
        </intent-filter>
        <argument pegaso:key="DISABLE_EDIT_ON_CLICK" />
        <argument pegaso:key="ENABLE_FAB_ADD" />
    </perspective>


    <!-- Perspectivas de edição
         A perspectiva padrão é: br.com.zalem.ymir.client.android.entity.ui.perspective.EntityEditingPerspective
     -->

    <perspective pegaso:title="@string/expense_editing_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntityEditingPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Expense">
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.EDITING" />
            <category pegaso:name="Expense" />
        </intent-filter>
    </perspective>

    <perspective pegaso:title="@string/place_editing_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntityEditingPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Place">
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.EDITING" />
            <category pegaso:name="Place" />
        </intent-filter>
    </perspective>

	<perspective pegaso:title="@string/product_editing_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntityEditingPerspective"
        pegaso:theme="@style/ThemeOverlay.Sample.Light.Perspective.Product">
        <intent-filter>
        	<action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.EDITING" />
        	<category pegaso:name="Product" />
        </intent-filter>
    </perspective>

	
	<!-- Perspectivas de seleção
	     A perspectiva padrão é: br.com.zalem.ymir.client.android.entity.ui.perspective.EntitySelectionPerspective
	-->

    <perspective pegaso:title="@string/place_selection_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntitySelectionPerspective">
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.SELECTION" />
            <category pegaso:name="Place" />
        </intent-filter>
        <argument pegaso:key="ENABLE_FAB_SELECT" />
    </perspective>

    <perspective pegaso:title="@string/product_selection_perspective_title"
        pegaso:className="br.com.zalem.ymir.client.android.entity.ui.perspective.EntitySelectionPerspective">
        <intent-filter>
            <action pegaso:name="br.com.zalem.ymir.client.android.entity.ui.perspective.SELECTION" />
            <category pegaso:name="Product" />
        </intent-filter>
        <argument pegaso:key="ENABLE_FAB_SELECT" />
    </perspective>
</perspectives>