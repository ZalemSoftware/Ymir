<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- O layout do EntityListDetailPerspective vai aqui -->

    <LinearLayout
        style="?perspectiveToolbarStyle"
        android:id="@+id/expense_list_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/expense_list_total_horizontal_margin"
        android:paddingRight="@dimen/expense_list_total_horizontal_margin"
        android:paddingTop="@dimen/expense_list_total_vertical_margin"
        android:paddingBottom="@dimen/expense_list_total_vertical_margin"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/expense_list_total" />

        <TextView
            android:id="@+id/expense_list_total_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="right"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</LinearLayout>