<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base do tema claro do Ymir -->
    <style name="Theme.Ymir.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_gray_238</item>
        <item name="android:colorBackground">@color/light_gray_238</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorError">@color/light_red</item>

        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- Precisa redefinir o "colorControlNormal" pq por padrão ele usa o "?android:textColorSecondary", então ele acaba sendo afetado pela modificação acima. -->
        <item name="colorControlNormal">@color/abc_secondary_text_material_light</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Extensões dos temas de overlay claro e escuro do Material Design que removem a ActionBar -->
    <style name="ThemeOverlay.AppCompat.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>